#!/bin/bash

__version__="2.3.5"

## DEFAULT HOST & PORT
HOST='127.0.0.1'
PORT='8080' 

RED="$(printf '\033[31m')"  GREEN="$(printf '\033[32m')"  ORANGE="$(printf '\033[33m')"  BLUE="$(printf '\033[34m')"
MAGENTA="$(printf '\033[35m')"  CYAN="$(printf '\033[36m')"  WHITE="$(printf '\033[37m')" BLACK="$(printf '\033[30m')"
CYANBG="$(printf '\033[41m')"  GREENBG="$(printf '\033[42m')"  ORANGEBG="$(printf '\033[43m')"  BLUEBG="$(printf '\033[44m')"
MAGENTABG="$(printf '\033[45m')"  CYANBG="$(printf '\033[46m')"  WHITEBG="$(printf '\033[47m')" BLACKBG="$(printf '\033[40m')"
RESETBG="$(printf '\e[0m\n')"

banner_g() {
    echo	${CYAN}     ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄
    echo	${RED}        █░░░░░░░░░░░░░░░░░░░░░░█
    echo	${GREEN} █░█▀█░█▀█░█▀▄░█▀▀░█░░█░█
    echo	${BLUE}     █░█▀▀░█▀█░█▀▄░█▀▀░█▀▄█░█
    echo	${RED}        █░▀░░░▀░▀░▀░▀░▀▀▀░▀░░▀░█${YELLOW} ${__version__}
    echo	${CYAN}     ▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀
}


about() {
    echo "${GREEN}About this script:"
    echo "${GREEN}Version: ${__version__}"
    echo "${GREEN}This script provides various utility functions for repo management."
    echo "${GREEN}This repo was created by paren-thesis on github"
    echo
    echo "${CYAN}This is a this of available commands"
}

exit_script() {
    echo "${GREEN}Exiting script..."
    clear
    exit 0
}

# Main Menu
main_menu() {
    while true; do
        clear
        banner_g
        echo
        echo -e "${RED}[${WHITE}1${RED}]${ORANGE} Configuration and Setup"
        echo -e "${RED}[${WHITE}2${RED}]${ORANGE} Branch Management"
        echo -e "${RED}[${WHITE}3${RED}]${ORANGE} Staging and Stash"
        echo -e "${RED}[${WHITE}4${RED}]${ORANGE} Commit Changes"
        echo -e "${RED}[${WHITE}5${RED}]${ORANGE} Undoing Changes"
        echo -e "${RED}[${WHITE}6${RED}]${ORANGE} Remote Repositories"
        echo -e "${RED}[${WHITE}7${RED}]${ORANGE} Logs and History"
        echo -e "${RED}[${WHITE}8${RED}]${ORANGE} Working with Submodules"
        echo -e "${RED}[${WHITE}9${RED}]${ORANGE} Advanced Commands"
        echo -e "${RED}[${WHITE}10${RED}]${ORANGE} Clean Up"
        echo -e "${RED}[${WHITE}11${RED}]${ORANGE} Tagging"
        echo -e "${RED}[${WHITE}99${RED}]${ORANGE} About"
        echo -e "${RED}[${WHITE}00${RED}]${ORANGE} Exit"
        echo
        read -p "${RED}[${WHITE}-${RED}]${GREEN} Select an option: ${BLUE}" selected

        case $selected in
            1) source /c/paren/config.exe ;;
            2) source /c/paren/branch.exe ;;
            3) source /c/paren/stage.exe ;;
            4) source /c/paren/commit.exe ;;
            5) source /c/paren/undo.exe ;;
            6) source /c/paren/remote.exe ;;
            7) source /c/paren/logs.exe ;;
            8) source /c/paren/submod.exe ;;
            9) source /c/paren/advanced.exe ;;
            10) source /c/paren/cleanup.exe ;;
            11) source /c/paren/tagging.exe ;;
            99) about ;;
            00) exit_script ;;
            *) echo "${RED}Invalid option! Please try again." ;;
        esac

        read -p "${GREEN}Press [Enter] to continue..." dummy
    done
}

# Run the menu
main_menu
